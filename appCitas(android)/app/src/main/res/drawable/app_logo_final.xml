<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Background Color: Matching the logo's soft pink tone to hide the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F7E6E6" /> <!-- Soft Rose/Beige color derived from logo -->
        </shape>
    </item>
    
    <!-- 2. The Logo: Padded to counteract system zoom. 
         12dp padding prevents text cropping while keeping it large enough. -->
    <item 
        android:top="12dp" 
        android:bottom="12dp" 
        android:left="12dp" 
        android:right="12dp">
        <bitmap 
            android:src="@drawable/app_logo" />
    </item>
</layer-list>
