<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCita"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Title + Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTituloCita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Paseo romántico"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E3E5C" />

            <ImageView
                android:id="@+id/ivMenuCita"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                app:tint="#9FA5C0" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescripcionCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Paseo tranquilo por el parque"
            android:textSize="14sp"
            android:textColor="#9FA5C0" />

        <!-- Tags Row 1 -->
        <LinearLayout
            android:id="@+id/layoutChips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChipDinero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€ Poco"
                android:textSize="12sp"
                android:textColor="#FF8A65"
                android:background="@drawable/bg_chip_soft"
                android:backgroundTint="#FBE9E7"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvChipIntensidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tranqui"
                android:textSize="12sp"
                android:textColor="#7986CB"
                android:background="@drawable/bg_chip_soft"
                android:backgroundTint="#E8EAF6"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvChipCercania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerca"
                android:textSize="12sp"
                android:textColor="#4DB6AC"
                android:background="@drawable/bg_chip_soft"
                android:backgroundTint="#E0F2F1"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

        <!-- Tags Row 2 (Optional, for overflow) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChipTemporada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verano"
                android:textSize="12sp"
                android:textColor="#A1887F"
                android:background="@drawable/bg_chip_soft"
                android:backgroundTint="#EFEBE9"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
