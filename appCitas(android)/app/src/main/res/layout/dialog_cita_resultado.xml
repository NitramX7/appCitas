<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cita_resultado_epic"
    android:padding="24dp">

    <!-- Botón cerrar elegante en la esquina -->
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/bg_close_button_modern"
        android:tint="#FFFFFF"
        android:contentDescription="Cerrar"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icono corazón/trofeo grande y bonito -->
    <ImageView
        android:id="@+id/ivCitaIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_heart_filled"
        android:tint="#81C784"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Título épico con mejor diseño -->
    <TextView
        android:id="@+id/txtTituloDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="✨ Tu Cita Perfecta ✨"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:letterSpacing="0.03"
        app:layout_constraintTop_toBottomOf="@id/ivCitaIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <!-- Card con descripción - diseño mejorado -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1B5E20"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="#81C784"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/txtDescripcionDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la cita..."
            android:textSize="17sp"
            android:textColor="#E8F5E9"
            android:padding="20dp"
            android:lineSpacingExtra="6dp"
            android:textAlignment="center" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Separador elegante con diseño mejorado -->
    <View
        android:id="@+id/dividerEpic"
        android:layout_width="120dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_divider_green"
        app:layout_constraintTop_toBottomOf="@id/cardDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Card con detalles - colores coherentes -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetalles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2E7D32"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:strokeColor="#A5D6A7"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/dividerEpic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✨ Características"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#C5E1A5"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/txtDetallesDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles..."
                android:textSize="16sp"
                android:textColor="#E8F5E9"
                android:lineSpacingExtra="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>