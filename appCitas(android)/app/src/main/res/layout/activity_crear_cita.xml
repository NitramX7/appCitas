<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:title="Crear Nueva Cita"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIconTint="?attr/colorOnSurface" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- TÍTULO -->
                <TextView
                    android:id="@+id/tvTituloLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título"
                    android:textColor="?attr/colorOnSurface"
                    android:background="@drawable/label_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/etTituloCita"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTituloCita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Título"
                    android:textColorHint="?android:attr/textColorHint"
                    android:textColor="?attr/colorOnSurface"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTituloLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- DESCRIPCIÓN -->
                <TextView
                    android:id="@+id/tvDescripcionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Descripción"
                    android:textColor="?attr/colorOnSurface"
                    android:background="@drawable/label_background"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:elevation="4dp"
                    app:layout_constraintTop_toBottomOf="@id/etTituloCita"
                    app:layout_constraintStart_toStartOf="@+id/etDescripcionCita"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcionCita"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:hint="Descripción"
                    android:gravity="top"
                    android:textColorHint="?android:attr/textColorHint"
                    android:textColor="?attr/colorOnSurface"
                    android:background="@drawable/edit_text_background"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDescripcionLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- TEMPORADA -->
                <TextView
                    android:id="@+id/tvTemporadaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Temporada"
                    android:textColor="?attr/colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/etDescripcionCita"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/groupTemporada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnVerano"
                    app:layout_constraintTop_toBottomOf="@id/tvTemporadaLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.button.MaterialButton style="@style/Widget.App.Button.OutlinedButton.Chip" android:id="@+id/btnInvierno" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Invierno"/>
                    <com.google.android.material.button.MaterialButton style="@style/Widget.App.Button.OutlinedButton.Chip" android:id="@+id/btnVerano" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Verano"/>
                    <com.google.android.material.button.MaterialButton style="@style/Widget.App.Button.OutlinedButton.Chip" android:id="@+id/btnOtono" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Otoño"/>
                    <com.google.android.material.button.MaterialButton style="@style/Widget.App.Button.OutlinedButton.Chip" android:id="@+id/btnPrimavera" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Primavera"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- SLIDERS -->
                <TextView android:id="@+id/tvDineroLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="Dinero" android:textColor="?attr/colorOnSurface" app:layout_constraintTop_toBottomOf="@id/groupTemporada" app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.slider.Slider android:id="@+id/sliderDinero" android:layout_width="0dp" android:layout_height="wrap_content" android:valueFrom="1" android:valueTo="3" android:stepSize="1" app:layout_constraintTop_toBottomOf="@id/tvDineroLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/tvIntensidadLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Intensidad" android:textColor="?attr/colorOnSurface" app:layout_constraintTop_toBottomOf="@id/sliderDinero" app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.slider.Slider android:id="@+id/sliderIntensidad" android:layout_width="0dp" android:layout_height="wrap_content" android:valueFrom="1" android:valueTo="3" android:stepSize="1" app:layout_constraintTop_toBottomOf="@id/tvIntensidadLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/tvCercaniaLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Cercanía" android:textColor="?attr/colorOnSurface" app:layout_constraintTop_toBottomOf="@id/sliderIntensidad" app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.slider.Slider android:id="@+id/sliderCercania" android:layout_width="0dp" android:layout_height="wrap_content" android:valueFrom="1" android:valueTo="3" android:stepSize="1" app:layout_constraintTop_toBottomOf="@id/tvCercaniaLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/tvFacilidadLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Facilidad" android:textColor="?attr/colorOnSurface" app:layout_constraintTop_toBottomOf="@id/sliderCercania" app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.slider.Slider android:id="@+id/sliderFacilidad" android:layout_width="0dp" android:layout_height="wrap_content" android:valueFrom="1" android:valueTo="3" android:stepSize="1" app:layout_constraintTop_toBottomOf="@id/tvFacilidadLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                <!-- BOTÓN GUARDAR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCrearCitaGuardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="¡Crear Aventura!"
                    android:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/sliderFacilidad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

    <!-- MENÚ LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
